@using TailwindMerge;
@inject TwMerge Tw;

@if (UsePill)
{
    <a class=@Tw.Merge("group inline-block rounded-full bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 p-[2px] hover:text-white focus:outline-none focus:ring active:text-opacity-75", 
            Class,
            Disabled ? "opacity-50 pointer-events-none":"")
       href="#" @onclick="@Invoke">
        <span class="group-hover:bg-transparent flex w-full items-center justify-center rounded-full bg-white px-8 py-3 text-sm font-medium">
            @Text
        </span>
    </a>
}
else
{
    <a class=@Tw.Merge("group inline-block rounded bg-blue-500 p-[2px] hover:text-white focus:outline-none focus:ring active:text-opacity-75", 
        Class, 
        Disabled ? "opacity-50 pointer-events-none" : "")
       href="#" @onclick="@Invoke">
        <span class="group-hover:bg-transparent group-hover:text-white flex w-full items-center justify-center rounded-sm bg-white px-8 py-3 text-sm font-medium text-blue-500">
            @Text
        </span>
    </a>
}




@code {
    [Parameter]
    public string Text { get; set; } = "Click Me";

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool UsePill { get; set; }

    [Parameter]
    public EventCallback? OnClick { get; set; }

    [Parameter]
    public string? Class { get; set; }

    private void Invoke()
    {
        OnClick?.InvokeAsync();
    }
}
