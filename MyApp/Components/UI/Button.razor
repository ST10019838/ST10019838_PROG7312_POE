@if (UsePill)
{
    <a class="p-[2px] group inline-block rounded-full bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 hover:text-white focus:outline-none focus:ring active:text-opacity-75"
       href="#" @onclick="@Invoke">
        <span class="block rounded-full bg-white px-8 py-3 text-sm font-medium group-hover:bg-transparent">
            @Text
        </span>
    </a>
}
else
{
    <a class="p-[2px] group inline-block rounded bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 hover:text-white focus:outline-none focus:ring active:text-opacity-75"
       href="#" @onclick="@Invoke">
        <span class="block rounded-sm bg-white px-8 py-3 text-sm font-medium group-hover:bg-transparent">
            @Text
        </span>
    </a>
}




@code {
    [Parameter]
    public string Text { get; set; } = "Click Me";


    [Parameter]
    public bool UsePill { get; set; }

    [Parameter]
    public Action? Method { get; set; }

    private void Invoke()
    {
        Method?.Invoke();
    }
}
